<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="6dp" />
			<solid android:color="@color/quizProgressBackground"/>
		</shape>
	</item>
	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners
					android:radius="6dp" />
				<solid android:color="@color/quizProgressForeground"/>
			</shape>
		</clip>
	</item>
</layer-list>
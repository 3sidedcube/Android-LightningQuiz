<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="quizProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/progress_bar_drawable</item>
		<item name="android:layout_height">6dp</item>
		<item name="android:layout_width">86dp</item>
		<item name="android:layout_marginTop">3dp</item>
		<item name="android:indeterminateOnly">false</item>
	</style>

	<style name="QuizImageLabel">
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>

	<style name="QuizImageLabel.Unselected">
		<item name="android:textColor">@color/grey</item>
	</style>

	<style name="QuizImageLabel.Selected">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="BadgeCollectionItemLabel">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/grey</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:letterSpacing">0.03</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:paddingTop">3dp</item>
		<item name="android:paddingBottom">3dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:layout_marginTop">6dp</item>
		<item name="android:layout_marginBottom">6dp</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<style name="BadgeCollectionItemLabel.Active">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="Quiz" />

	<style name="Quiz.WinTitle" parent="android:TextAppearance">
		<item name="android:textSize">20sp</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="Quiz.WinDescription" parent="android:TextAppearance">
		<item name="android:textSize">14sp</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@android:color/darker_gray</item>
	</style>

	<style name="Quiz.ShareBadgeButton" parent="android:Widget.Button">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Quiz.WinMessageContainer" parent="android:Widget">
		<item name="android:background">@android:color/darker_gray</item>
	</style>

	<style name="Quiz.BadgeImage" parent="android:Widget">
		<item name="android:padding">20dp</item>
		<item name="android:layout_margin">20dp</item>
	</style>

	<style name="Quiz.BadgeShareContainer" parent="android:Widget">
		<item name="android:padding">20dp</item>
		<item name="android:layout_margin">20dp</item>
	</style>
	<style name="Quiz.RetakeButton" parent="android:Widget.Button">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="QuizNextButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:paddingTop">15dp</item>
		<item name="android:paddingBottom">15dp</item>
		<item name="android:paddingLeft">30dp</item>
		<item name="android:paddingRight">30dp</item>
		<item name="android:layout_marginTop">15dp</item>
		<item name="android:layout_marginBottom">15dp</item>
		<item name="android:layout_marginLeft">24dp</item>
		<item name="android:layout_marginRight">24dp</item>
		<item name="android:background">@drawable/button_active</item>
		<item name="android:textSize">14sp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:textColor">@color/buttonTextActive</item>
		<item name="android:letterSpacing">0.04</item>
	</style>

	<style name="QuizNextButton.Inactive">
		<item name="android:background">@drawable/button_inactive</item>
		<item name="android:textColor">@color/buttonTextInactive</item>
	</style>
</resources>
